    <style>

    /* Landscape orientation for the rest of the pages */
    @page {
      size: A4 landscape;
      margin-bottom: 2rem;
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box;
      font-family: Helvetica, sans-serif;
    }
    body {
      font-size: 9pt;
      font-family: Helvetica, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #fff;
    }

    .page {
      break-after: page;
    }
    .invoice {
      padding: 0 1rem 1rem;
    }

    .invoice-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .invoice-header-left {
      width: 50%;
    }
    .invoice-code {
      display: flex;
      justify-content: space-between;
      align-items: center;
      line-height: 1.2;
    }
    .invoice-body-1 {
      display: grid;
      gap: 1px;
      background-color: #000;
      padding: 1px;
      grid-template-columns: 1fr 1fr;
    }
    .invoice-body {
      background-color: #fff;
      padding: 0 1rem 1rem;
    }
    .item1 {
      grid-column: 1;
      grid-row: 1 / span 2;
    }
    .item4 {
      grid-column: 1 / span 2;
      grid-row: 3;
      text-align: center;
    }
    .item8 {
      grid-column: 1 / span 2;
    }
    .buyer-details {
      display: flex;
      flex-direction: column;
      width: 33.35%;
    }
    .invoice-total {
      margin-top: 1rem;
    }
    .invoice-footer {
      margin-top: 1rem;
    }
    .bold {
      font-weight: bold;
    }
    .h2-prev {
      font-size: 11pt;
      font-weight: 700;
    }
    .margin-bottom {
      margin-bottom: 16px;
    }

    .invoice-table {
      width: 100%;
      border-collapse: collapse;
    }
    .invoice-table th,
    .invoice-table td {
      border: 1px solid #000;
      padding: 4px;
      text-align: left;
    }
    .invoice-table thead,
    tbody {
      font-size: 12px;
    }

    .invoice-table th, td {
      vertical-align: top !important;
    }

    .item {
      page-break-inside: avoid;
    }
