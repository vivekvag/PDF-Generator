<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Invoice</title>
		<style>
			body { font-family: Arial, sans-serif; margin: 0; padding: 0;
			background-color: #f0f0f0; } .invoice { width: 21cm; min-height: 29.7cm;
			padding: 2cm; margin: 1cm auto; border: 1px solid #d3d3d3;
			background-color: #fff; } .invoice-header { text-align: center;
			margin-bottom: 20px; } .invoice-body { margin-bottom: 20px; }
			.invoice-table { width: 100%; border-collapse: collapse; } .invoice-table
			th, .invoice-table td { border: 1px solid #dddddd; padding: 10px;
			text-align: left; } .invoice-total { text-align: right; font-size: 18px;
			font-weight: bold; } .invoice-footer { text-align: center; }
			.invoice-footer p { font-size: 12px; color: #666; } .invoice-header h2 {
			color: #333; font-size: 28px; margin-bottom: 5px; } .invoice-header p {
			color: #666; font-size: 14px; margin-top: 0; }
		</style>
	</head>
	<body>
		<div class='invoice'>
			<div class='invoice-header'>
				<h2>{{invoice.header.title}}</h2>
				<p>Date: {{invoice.header.date}}</p>
				<p>Invoice Number: {{invoice.header.invoice_number}}</p>
			</div>
			<div class='invoice-body'>
				<table class='invoice-table'>
					<thead>
						<tr>
							<th>Description</th>
							<th>Quantity</th>
							<th>Unit Price</th>
							<th>Total</th>
						</tr>
					</thead>
					<tbody>
						{{#each invoice.items}}
							<tr>
								<td>{{this.description}}</td>
								<td>{{this.quantity}}</td>
								<td>${{this.unit_price}}</td>
								<td>${{this.total}}</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
			<div class='invoice-total'>
				<p>Total: ${{invoice.total}}</p>
			</div>
			<div class='invoice-footer'>
				<p>Thank you for your business!</p>
			</div>
		</div>
	</body>
</html>